<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome" />

    <Button
        android:id="@+id/btStartUe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@color/darkMenuButtons"
        android:text="@string/startUe"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btStartTr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@color/darkMenuButtons"
        android:text="@string/startTr"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btStartEU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@color/darkMenuButtons"
        android:text="@string/startEU"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btStartPlaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@color/darkMenuButtons"
        android:text="@string/startPlaylist"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btStartTrainGen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@color/darkMenuButtons"
        android:text="@string/startTrainPlan"
        android:textSize="25dp" />

</LinearLayout>